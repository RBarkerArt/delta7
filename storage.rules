rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.role == 'admin' || 
        request.auth.token.email == 'robert.barker2008@gmail.com'
      );
    }

    // Evidence: Public read, Admin write
    match /evidence/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site imagery: Public read, Admin write
    match /site_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // All other paths: Admin-only read, no write
    match /{allPaths=**} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
